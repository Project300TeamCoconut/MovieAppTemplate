<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.movieapptemplate.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_checklist"
        android:name="com.example.movieapptemplate.ui.checklist.ChecklistFragment"
        android:label="@string/title_watchlist"
        tools:layout="@layout/fragment_checklist" />

    <fragment
        android:id="@+id/navigation_moviecards"
        android:name="com.example.movieapptemplate.ui.moviecards.MovieCardsFragment"
        android:label="@string/title_moviecards"
        tools:layout="@layout/fragment_moviecards" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.movieapptemplate.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />
</navigation>